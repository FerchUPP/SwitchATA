            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/gyroscopeSensorLeft"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botón para mostrar los sensores del teléfono -->
        <Button
            android:id="@+id/showPhoneSensorsButtonLeft"
            style="@style/light"
            android:layout_width="154dp"
            android:layout_height="37dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circular_button"
            android:text="Compara tus sensores"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/compassSensorLeft" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Separador -->
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#cccccc" />

    <!-- Columna Derecha para el Segundo Modelo -->
