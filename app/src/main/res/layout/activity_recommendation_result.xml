<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Botón para regresar -->
        <ImageButton
            android:id="@+id/backToRecommendationsButton"
            android:layout_width="27dp"
            android:layout_height="28dp"
            android:layout_gravity="start"
            android:background="@android:color/transparent"
            android:contentDescription="Regresar a recomendaciones"
            android:src="@drawable/back_icon"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/title_1"
            style="@style/sb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="0dp"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:text="Mejor modelo de acuerdo"
            android:layout_below="@id/backToRecommendationsButton"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/title_2"
            style="@style/sb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-12dp"
            android:textAlignment="center"
            android:text="a tu configuración"
            android:layout_below="@id/title_1"
            android:layout_marginBottom="20dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/subtitle_1"
            style="@style/sb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-5dp"
            android:textAlignment="center"
            android:text="ADVERTENCIA"
            android:layout_below="@id/title_2"
            android:textSize="12sp"
            android:textColor="#FF6666"/>

        <TextView
            android:id="@+id/subtitle_2"
            style="@style/medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:textAlignment="center"
            android:text="Recuerda que esto solo es una recomendación,"
            android:layout_below="@id/subtitle_1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/subtitle_3"
            style="@style/medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-5dp"
            android:textAlignment="center"
            android:text="visita las tiendas en línea para que puedas encontrar"
            android:layout_below="@id/subtitle_2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/subtitle_4"
            style="@style/medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-5dp"
            android:textAlignment="center"
            android:text="el mejor modelo en base a tu criterio."
            android:layout_below="@id/subtitle_3"
            android:textSize="12sp" />

        <!-- Imagen del modelo de iPhone -->
        <ImageView
            android:id="@+id/modelImageView"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="Imagen del modelo de iPhone"
            android:scaleType="fitCenter"
            android:layout_below="@id/subtitle_4"
            android:layout_marginTop="25dp"/>

        <!-- Nombre del modelo -->
        <TextView
            style="@style/medium"
            android:id="@+id/modelVersionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal" />

        <!-- Tamaño de Pantalla -->
        <TextView
            style="@style/light"
            android:id="@+id/modelScreensizeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal" />

        <TextView
            style="@style/light"
            android:id="@+id/modelResolution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal" />

        <!-- Batería -->
        <TextView
            style="@style/light"
            android:id="@+id/modelBatteryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal" />

        <!-- Cámara Principal -->
        <TextView
            style="@style/light"
            android:id="@+id/modelMainCameraTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal" />

        <!-- Zoom -->
        <TextView
            style="@style/light"
            android:id="@+id/modelZoomMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal" />

        <!-- Cámara Frontal -->
        <TextView
            style="@style/light"
            android:id="@+id/modelFrontCameraTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal" />

        <!-- Almacenamiento -->
        <TextView
            style="@style/light"
            android:id="@+id/subtitle_storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:textSize="15sp"
            android:text="Almacenamiento:"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/modelFrontCameraTextView"/>

        <TextView
            style="@style/light"
            android:id="@+id/modelStorageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/subtitle_storage"/>

    </LinearLayout>
</ScrollView>